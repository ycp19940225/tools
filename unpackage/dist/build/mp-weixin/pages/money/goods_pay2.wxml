<view class="app"><view class="order_box"><view class="order_title"><text class="text-black text-bold">订单信息</text></view><view class="order_detail"><view><text class="text-grey">商品名称:</text><text class=" text-df padding">{{orderInfo.list[0].goods_title}}</text></view><view><text class="text-grey">数量:</text><text class=" text-df padding">{{orderInfo.list[0].number_goods}}</text></view><view><text class="text-grey">订单编号:</text><text class=" text-df padding">{{orderInfo.order_no}}</text></view><view><text class="text-grey">商品规格:</text><text class=" text-df padding">{{orderInfo.list[0].goods_spec}}</text></view></view></view><view class="pay-type-list"><block wx:if="{{orderInfo.couponsList&&orderInfo.couponsList.length>0}}"><view class="type-item b-b" data-target="Modal" data-event-opts="{{[['tap',[['showModal',['$event']]]]]}}" bindtap="__e"><text class="icon cuIcon-ticket text-orange"></text><view class="con"><text class="tit">优惠券</text><text>{{''+selectTitle}}</text></view><view class="radio"><text class="icon cuIcon-right text-orange"></text></view></view></block><view class="{{['cu-modal',modalName=='Modal'?'show':'']}}"><view class="cu-dialog"><view class="cu-bar bg-white justify-end"><view class="content">选择优惠券</view><view data-event-opts="{{[['tap',[['hideModal',['$event']]]]]}}" class="action" bindtap="__e"><text class="cuIcon-close text-red"></text></view></view><view class="padding-xl text-left"><block wx:for="{{orderInfo.couponsList}}" wx:for-item="item" wx:for-index="key" wx:key="key"><view><view data-event-opts="{{[['tap',[['selectCoupons',[key]]]]]}}" class="type-item" bindtap="__e"><view class="con"><text class="tit">{{item.name}}</text><text>{{"优惠金额 ¥ "+item.reduced_price}}</text></view><label class="radio"><radio value="" color="#fa436a" checked="{{coupons_id==key}}"></radio></label></view></view></block></view></view></view></view><text data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="mix-btn text-green" bindtap="__e">确认领取</text></view>